                                    <td><p style="color:indigo"><strong>Eklenmedi!</strong></p></td>
                                }

                                @if (item.MetaKeywords != null)
                                {
                                    @if (item.MetaKeywords.ToString().Length > 15)
                                    {
                                        <td>@item.MetaKeywords.Substring(0, 15)...</td>
                                    }
                                    else
                                    {
