<form id="updateform">
    <div id="updatestaticpagepopup" class="modal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content modal-content-demo">
                <div class="modal-header">
                    <h6 class="modal-title">Sayfa Güncelle</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="text" name="id" id="pageid" style="display:none" value="" />
                        </div>

                    </div>



                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Sayfa Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="pagename" name="sayfaadı">
                        </div>
                    </div>






                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="pagebaslık" name="baslık">
                        </div>
                    </div>



                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">İçerik</label>
                        <div class="col-sm-10">
                            <textarea id="editor2" class="form-control" name="htmlcontent"> </textarea>
                        </div>
                    </div>







                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Özet</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="pagedescription" name="description">
                        </div>
                    </div>






                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Anahtar Kelimeler</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="pagekeyword" name="keyword">
                        </div>
                    </div>





                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"> URL</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="gidilecekurl" name="url">
                        </div>
                    </div>









                </div><!-- modal-body -->
                <div class="modal-footer">
                    <button type="submit" id="updatestaticpage" class="btn btn-indigo">Güncelle</button>
                    <a asp-action="Index" asp-controller="StaticPage" class="btn btn-outline-light">Kapat</a>
                </div>
            </div>
        </div>
    </div>







</form>




