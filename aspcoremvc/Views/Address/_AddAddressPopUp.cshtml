




<div id="addressmodal" class="modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Adres Ekle</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">

                    @*<input type="hidden" name="newsId" id="newsId" value="@ViewBag.Lastnews" />*@
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="addressname" name="title">
                        </div>



                    </div>






                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="email" name="title">
                        </div>



                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Telefon</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="phone" name="title">
                        </div>



                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Şehir</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="city" name="title">
                        </div>



                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">İlçe</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="county" name="title">
                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tam Adres</label>
                        <div class="col-sm-10">
                            <textarea id="fulladdress" class="form-control"></textarea>
                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Boylam</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="longitude" name="title">
                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Enlem</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="latitude" name="title">
                        </div>



                    </div>


                </form>
            </div><!-- modal-body -->
            <div class="modal-footer">
                <button type="submit" id="addaddress" class="btn btn-indigo">Ekle</button>
                <a asp-action="Index" asp-controller="Address" class="btn btn-outline-light">Kapat</a>
            </div>
        </div>
    </div>
</div>


