

<style>
    .error {
        color: red;
        font-family: 'Times New Roman', Times, serif;
    }
</style>

<form id="social-media-form">
    <div id="add-social-media-popup" class="modal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content modal-content-demo">
                <div class="modal-header">
                    <h6 class="modal-title">Sosyal Medya</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">

                    <input type="text" id="social-media-id" style="display:none" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">İsim</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" name="name">

                        </div>



                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Görünürlük</label>
                        <div class="col-sm-10">
                            @*<select id="is-visible" value="" name="isvisible" class="form-control select-2 ">

                                    <option value="true">Evet</option>
                                    <option value="false">Hayır</option>

                                </select>*@
                            <select class="custom-select form-control"  id="is-visible" name="isvisible" >
                                
                                <option value=true>Evet</option>
                                <option  value=false>Hayır</option>
                                
                            </select>
                        </div>



                    </div>


                    <div id="current-icon-div" class="form-group row">
                        <label class="col-sm-2 col-form-label">Mevcut Fotoğraf</label>
                        <div class="col-sm-10">
                            <div class="row row-sm">
                                <div class="col-sm-7 col-md-6 col-lg-4">
                                    @*<div class="custom-file">
                                            <input type="file" id="imageurl" name="image" />
                                            <label for="image" data-browse="Dosya Seç"></label>
                                        </div>*@
                                    <img src="" id="current-icon" style="width:150px; height:150px;" />
                                </div><!-- col -->
                            </div><!-- row -->

                        </div>



                    </div>



                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">İkon</label>
                        <div class="col-sm-10">
                            <div class="row row-sm">
                                <div class="col-sm-7 col-md-6 col-lg-4">
                                    <div>
                                        <input type="file" id="icon" name="icon">
                                        <label for="icon" data-browse="Dosya Seç"></label>

                                    </div>
                                </div><!-- col -->
                            </div><!-- row -->

                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Href</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="href" name="href">
                        </div>



                    </div>
                </div>
                <div class="modal-footer">

                    <button id="add-social-media" class="btn btn-indigo" type="submit">Kaydet</button>

                    <a asp-action="Index" asp-controller="SocialMedia" class="btn btn-outline-light">Kapat</a>
                </div>


            </div>

        </div>
    </div>

</form>

