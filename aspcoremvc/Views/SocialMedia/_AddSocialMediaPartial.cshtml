

<style>
    .error{
        color:red;
        font-family:'Times New Roman', Times, serif;
    }
</style>

<form id="submitForm">
    <div id="addsocialmediapopup" class="modal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content modal-content-demo">
                <div class="modal-header">
                    <h6 class="modal-title">Sosyal Medya Ekle</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">İsim</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" name="sosyaladı">

                        </div>



                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Görünürlük</label>
                        <div class="col-sm-10">
                            <select id="isvisible" name="görünürlük" class="form-control select2">

                                <option value="True">Evet</option>
                                <option value="False">Hayır</option>

                            </select>
                        </div>



                    </div>



                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">İkon</label>
                        <div class="col-sm-10">
                            <div class="row row-sm">
                                <div class="col-sm-7 col-md-6 col-lg-4">
                                    <div >
                                        <input type="file" id="icon" name="dosya">
                                        <label  for="dosya" data-browse="Dosya Seç"></label>

                                    </div>
                                </div><!-- col -->
                            </div><!-- row -->

                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Href</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="href" name="uzantı">
                        </div>



                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="submit" id="addsocialmedia" class="btn btn-indigo " value="Ekle"></button>*@
                    <button id="addsocialmedia" class="btn btn-primary" type="submit">Ekle</button>

                    <a asp-action="Index" asp-controller="SocialMedia" class="btn btn-outline-light">Kapat</a>
                </div>
                @*<button id="addsocialmedia" class="btn btn-primary" type="submit">Kaydet</button>*@

            </div>

            </div>
    </div>

</form>

