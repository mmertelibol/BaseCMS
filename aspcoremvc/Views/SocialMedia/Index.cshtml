@model IEnumerable<SocialMediaDto>


@{
    ViewData["Title"] = "SocialMedia";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    #selector[class*="sort"]:before,
    #selector[class*="sort"]:after {
        content: "" !important;
    }
</style>

<div class="az-content pd-y-20 pd-lg-y-30 pd-xl-y-40">
    <div class="container">

        <div class="az-content-body pd-lg-l-40 d-flex flex-column">

            <a class="btn" data-toggle="modal" id="btnAddSocialMedia" style="width:180px;  background-color:#5b47fb"><strong style="color:white">Sosyal Medya Ekle</strong> </a>
            @Html.Partial("_AddEditSocialMedia")

           

            <hr class="mg-y-30">

            <div>
                <table id="example2" class="table dataTable no-footer dtr-inline" role="grid" aria-describedby="example2_info">
                    <thead>
                        <tr>

                            <th>Ad</th>
                            <th>Görünürlük</th>
                            <th>Ikon</th>
                            <th>Href</th>
                            @*<th>Düzenle</th>*@
                            <th id="selector"></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (!string.IsNullOrWhiteSpace(item.Name))
                                {
                                    <td>@item.Name</td>

                                }
                                else
                                {
                                    <td><p style="color:indigo"> <strong>Eklenmedi!</strong> </p></td>
                                }

                                <td>
                                    @if (item.IsVisible)
                                    {
                                        <span class="badge badge-success">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Hayır</span>
                                    }
                                </td>


                                @if (!string.IsNullOrWhiteSpace(item.Icon))
                                {
                                    <td><img src="~/img/@item.Icon" style="width:150px; height:150px;" /></td>
                                }
                                else
                                {

                                    <td><p style="color:indigo"> <strong>Eklenmedi!</strong> </p></td>
                                }


                                @if (!string.IsNullOrWhiteSpace(item.Href))
                                {


                                    <td>@item.Href</td>

                                }
                                else
                                {
                                    <td><p style="color:indigo"> <strong>Eklenmedi!</strong> </p></td>
                                }

                                <td>
                                    <button class="btn btn-sm btn-indigo rounded-pill" onclick="getById('@item.Id')" data-toggle="modal" data-target="#addsocialmediapopup"><i class="far fa-edit"></i></button>
                                    <button data-id="@item.Id" type="submit" name="delete" class="btn btn-sm btn-danger rounded-pill deletesocialmedia"><i class="far fa-trash-alt"></i></button>
                                </td>


                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="ht-40"></div>
        </div><!-- az-content-body -->
    </div><!-- container -->
</div><!-- az-content -->


@section Section{


    <script type="text/javascript">
        $(document).on('click', '.deletesocialmedia', function () {

            var id = $(this).data("id");

            Swal.fire({
                title: 'Emin Misin?',
                text: "Sosyal Medya Silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'delete',
                        url: '/SocialMedia/DeleteSocialMedia?Id=' + id,
                        success: function (data) {
                            if (data) {
                                //swal('Silindi!', 'Kategori silindi?', 'success');
                                location.href = "/SocialMedia/Index";
                            }

                            else {
                                Swal.fire('Hata Oluştu!', 'İşlem sırasında hata oluştu?', 'warning');
                                return false;
                            }
                        }
                    });

                }
            });
        });
    </script>



    <script>

        $("#btnAddSocialMedia").on("click", function () {

            $("#socialmediaid").val(0);
            $("#name").val("");
            $("#visibility").val("");
            $("#icon").val("");
            $("#ahref").val("");



            $("#addsocialmediapopup").modal("show");

        });

    
        function getById(id) {
            $.ajax({
                url: "/SocialMedia/GetSocialMediaById",
                type: "Get",
                contentType: "application/json; charset=utf8",
                dataType: "json",
                data: {
                    Id: id
                },
                success: function (data) {
                    $("#socialmediaid").val(data.Id);
                    $("#name").val(data.Name);
                    $("#visibility").val(data.IsVisible);
                    //$("#icon").val(data.Icon);
                    $("#ahref").val(data.Href);



                }
            })
        }
            
         $("#addsocialmedia").click(function () {
            $("#submitForm").validate({
                rules: {
                    name: { required: true },
                    isvisible:{ required: true },

                   
                    href: { required: true },
                    icon: { extension: "png" }

                },
                messages: {
                    name: { required: " Sosyal Medya ad alanı zorunlu!" },
                    isvisible: {required:"Görünürlük alanı zorunlu!"},
                   
                    href: { required: "Href Alanı Zorunlu" },
                    icon: { extension: "Lütfen png tipinde dosya seçiniz!" }

                },
                submitHandler: function (form) {
                    let id = $("#socialmediaid").val();
                    let socialmedianame = $("#name").val();
                    let visible = $("#visibility").val();
                    let iconurl = $("#icon")[0].files[0];
                    let href = $("#ahref").val();


                    let formData = new FormData();
                    formData.append("Id", id);
                    formData.append("Name", socialmedianame);
                    formData.append("IsVisible", visible);
                    formData.append("Href", href);

                    if (iconurl != null) {
                        formData.append("File", iconurl, iconurl.fileName);
                    }

                    // debugger;
                    $.ajax({
                        type: "post",
                        url: id == 0 ? "/SocialMedia/AddSocialMedia" : "/SocialMedia/UpdateSocialMedia",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (response) {
                            if (response) {

                                $('#addsocialmediapopup').modal('hide');
                            }
                            location.href = "/SocialMedia/Index";



                        }

                    });

                }
            });
        });



    </script>








