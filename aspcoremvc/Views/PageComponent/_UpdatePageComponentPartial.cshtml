




<div id="updatepagecomponentpopup" class="modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Update Component</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">

                    <input type="type" name="componentid" id="id" style="display:none" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="title" name="title">
                        </div>



                    </div>



                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="description" name="description">
                        </div>



                    </div>






                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Href</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="hrefurl" name="href">
                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Image</label>
                        <div class="col-sm-10">
                            <div class="row row-sm">
                                <div class="col-sm-7 col-md-6 col-lg-4">
                                    <div class="custom-file">
                                        <input type="file" id="imageurl" />

                                    </div>
                                </div><!-- col -->
                            </div><!-- row -->

                        </div>



                    </div>



                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Category</label>
                        <div class="col-sm-10">
                            <select id="categoryid" class="form-control select2">
                                @foreach (var item in ViewBag.ComponentCategories)
                                {
                                    <option id="categoryid" value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>



                    </div>







                </form>
            </div><!-- modal-body -->
            <div class="modal-footer">
                <button type="submit" onclick="ComponentUpdate()" class="btn btn-indigo">Update</button>
                <a asp-action="Index" asp-controller="PageComponent" class="btn btn-outline-light">Close</a>
            </div>
        </div>
    </div>
</div>


