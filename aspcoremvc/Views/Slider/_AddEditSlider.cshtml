
<style>
    .error {
        color: red;
        font-family: 'Times New Roman', Times, serif;
    }
</style>

<form id="addeditsliderform">

    <div id="updateslidermodal" class="modal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content modal-content-demo">
                <div class="modal-header">
                    <h6 class="modal-title">Slider</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    <input id="sliderid" name="sliderid" style="display:none;" />



                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Href</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="href" name="href" />

                        </div>



                    </div>

                    <div id="current-slider-div" class="form-group row">
                        <label class="col-sm-2 col-form-label">Mevcut Slider</label>
                        <div class="col-sm-10">
                            <div class="row row-sm">
                                <div class="col-sm-7 col-md-6 col-lg-4">
                                    @*<div class="custom-file">
                            <input type="file" id="imageurl" name="image" />
                            <label for="image" data-browse="Dosya Seç"></label>
                        </div>*@
                                    <img src="" id="current-slider" style="width:150px; height:150px;" />
                                </div><!-- col -->
                            </div><!-- row -->

                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Slider Resim</label>
                        <div class="col-sm-10">
                            <div class="row row-sm">
                                <div class="col-sm-7 col-md-6 col-lg-4">
                                    <div class="custom-file">
                                        <input type="file" id="sliderimage" name="sliderimage" />

                                    </div>
                                </div><!-- col -->
                            </div><!-- row -->

                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="description" name="description"></textarea>

                        </div>



                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Sıra No</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="ordernumber" name="ordernumber" />

                        </div>



                    </div>



                </div><!-- modal-body -->
                <div class="modal-footer">
                    <button type="submit" id="addEditSlider" class="btn btn-indigo">Kaydet</button>
                    <a asp-action="Index" asp-controller="Slider" class="btn btn-outline-light">Kapat</a>
                </div>
            </div>
        </div>
    </div>



</form>
