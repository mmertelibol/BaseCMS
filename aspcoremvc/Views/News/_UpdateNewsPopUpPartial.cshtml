






<div id="updatenewspopup" class="modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Haber Güncelle</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="text" name="name" id="newsid" style="display:none" value="" />
                        </div>

                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newstitle">
                        </div>
                    </div>


                   


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Yazar</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newsauthor">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Routing URL</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newsroute">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">İçerik</label>
                        <div class="col-sm-10">
                            <textarea class="ckeditor" id="editor2"> </textarea>
                        </div>
                    </div>







                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Özet</label>
                        <div class="col-sm-10">
                            <textarea  class="form-control" id="newsdescription"></textarea>
                          
                        </div>
                    </div>






                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Anahtar Kelimeler</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newskeyword">
                        </div>
                    </div>




                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select id="newscategory" class="form-control select2">
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option id="newscategory" value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>


                </form>

            </div><!-- modal-body -->
                <div class="modal-footer">
                    <button type="submit" onclick="newsUpdate()" class="btn btn-indigo">Güncelle</button>
                    <a asp-action="Index" asp-controller="News" class="btn btn-outline-light">Kapat</a>
                </div>
            </div>
    </div>
</div>











