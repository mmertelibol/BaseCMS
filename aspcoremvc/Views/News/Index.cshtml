@model IEnumerable<NewsDto>

@{
    ViewData["Title"] = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- vendor css -->
<!-- az-header -->


<div class="az-content pd-y-20 pd-lg-y-30 pd-xl-y-40">
    <div class="container">

        <div class="az-content-body pd-lg-l-40 d-flex flex-column">

            <a class="btn btn-primary" data-toggle="modal" data-target="#modaldemo3" style="width:120px;  background-color:#5b47fb"><strong style="color:white">Add News</strong> </a>
            @Html.Partial("_AddNewsPopUpPartial")
            @Html.Partial("_DeleteNewsPopUpPartial")
            @Html.Partial("_UpdateNewsPopUpPartial")





            <hr class="mg-y-30">

         

            <div>
                <table id="example2" class="table dataTable no-footer dtr-inline" role="grid" aria-describedby="example2_info">
                    <thead>
                        <tr>

                            <th>Title</th>
                            <th>Author</th>
                            <th>Content</th>
                            <th>Description</th>
                            <th>Keywords</th>
                            <th>Category</th>
                            <th>RoutingUrl</th>
                            <th>ViewCount</th>
                            @*<th>Details</th>*@
                            <th>Edit</th>
                            <th>Delete</th>




                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @*<td>@item.Id</td>
                                    @if (item.Title.ToString().Length > 5)
                                    {
                                        <td>@item.Title.Substring(0, 5)...</td>
                                    }
                                    else
                                    {
                                        <td>@item.Title</td>
                                    }*@
                                <td class="text-truncate"> @item.Title</td>

                                @if (item.Author.ToString().Length > 5)
                                {
                                    <td>@item.Author.Substring(0, 5)...</td>
                                }
                                else
                                {
                                    <td>@item.Author</td>
                                }

                                @if (item.HTMLContent.ToString().Length > 5)
                                {
                                    <td>@Html.Raw(item.HTMLContent.Substring(0, 5))...</td>
                                }
                                else
                                {
                                    <td>@Html.Raw(item.HTMLContent)</td>

                                }


                                @if (item.MetaDescription.ToString().Length > 5)
                                {
                                    <td>@item.MetaDescription.Substring(0, 5)...</td>
                                }
                                else
                                {
                                    <td>@item.MetaDescription</td>
                                }
                                @if (item.MetaKeywords.ToString().Length > 5)
                                {
                                    <td>@item.MetaKeywords.Substring(0, 5)...</td>
                                }
                                else
                                {
                                    <td>@item.MetaKeywords</td>
                                }
                                @if (item.NewsCategory.Name.ToString().Length > 5)
                                {
                                    <td>@item.NewsCategory.Name.Substring(0, 5)...</td>
                                }
                                else
                                {
                                    <td>@item.NewsCategory.Name</td>
                                }

                                @if (item.RoutingUrl.ToString().Length > 5)
                                {
                                    <td>@item.RoutingUrl.Substring(0, 5)...</td>
                                }
                                else
                                {
                                    <td>@item.RoutingUrl</td>
                                }







                                <td>@item.ViewCount</td>


                                @*<td><a href="#">Details </a></td>*@
                                <td>
                                    <a href="" onclick="getById('@item.Id')" data-toggle="modal" data-target="#updatenewspopup">Edit</a>

                                </td>
                                <td><a href="" onclick="newsdeleteshow('@item.Id')" data-toggle="modal" data-target="#deletenewspopup">Delete</a> </td>

                            </tr>
                        }



                    </tbody>
                </table>
            </div>


            <div class="ht-40"></div>


        </div><!-- az-content-body -->
    </div><!-- container -->
</div><!-- az-content -->


@section xx{





 

    <script>
        function getById(id) {
            $.ajax({
                url: "/News/GetNewsById",
                type: "Get",
                contentType: "application/json; charset=utf8",
                dataType: "json",
                data: {
                    Id: id
                },
                success: function (data) {
                    debugger;
                    //let gelenObje = jQuery.parseJSON(data);

                    $("#newsid").val(data.Id);
                    $("#newsroute").val(data.RoutingUrl);
                    $("#newstitle").val(data.Title);
                    CKEDITOR.instances.editor2.setData(data.HTMLContent);
                    $("#newsauthor").val(data.Author);
                    $("#newsdescription").val(data.MetaDescription);
                    $("#newskeyword").val(data.MetaKeywords);
                    $("#newscategory").val(data.NewsCategoryId);
                    
                    

                }

            })
        }

    </script>

    <script>

        function newsUpdate() {
            debugger
            CKEDITOR.instances['editor2'].updateElement();

            let id = $(newsid).val();
            let title = $(newstitle).val();
            let author = $(newsauthor).val();
            let htmlcontent = $(editor2).val();
            let description = $(newsdescription).val();
            let keyword = $(newskeyword).val();
            let category = $(newscategory).val();
            let route = $(newsroute).val();






            $.ajax({
                type: "put",
                url: "/News/UpdateNews",
                data: {
                    Id: id,
                    Title: title,
                    Author: author,
                    HTMLContent: htmlcontent,
                    MetaDescription: description,
                    MetaKeywords: keyword,
                    NewsCategoryId: category,
                    RoutingURL: route




                },
                success: function (response) {
                    if (response) {
                        $('#updatenewspopup').modal('hide');
                       

                    }
                    location.href = "/News/Index";

                },
                error: function () {
                    console.log("Hata Oluştu");
                     //swal("NewsUpdated!", "", "success");
                }
            })
        }
    </script>

    <script>

        function newsdeleteshow(id) {
            // debugger;

            $("#deletenewsinput").val(id);



        }
    </script>
    <script>

        function newsDelete() {
            let id = $(deletenewsinput).val();

            $.ajax({
                type: "delete",
                url: "/News/DeleteNews",
                data: {
                    Id: id

                },
                success: function (response) {
                    if (response) {
                        $('#deletenewspopup').modal('hide');
                        //swal("NewsDeleted!", "", "success");

                    }
                    location.href = "/News/Index"

                },
                error: function () {
                    console.log("Hata Oluştu");
                }
            })
        }
    </script>

