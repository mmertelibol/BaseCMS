


<style>
    .error {
        color: red;
        font-family: 'Times New Roman', Times, serif;
    }
</style>


<form id="updatenewsform">
    <div id="updatenewspopup" class="modal">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content modal-content-demo">
                <div class="modal-header">
                    <h6 class="modal-title">Haber</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="text" name="name" id="newsid" style="display:none" value="" />
                        </div>

                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newstitle" name="title">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Yazar</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newsauthor" name="author">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Routing URL</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newsroute" name="routingurl">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">İçerik</label>
                        <div class="col-sm-10">
                            <textarea class="ckeditor" name="editor2" id="editor2"> </textarea>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Özet</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="newsdescription" name="description"></textarea>

                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Anahtar Kelimeler</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="newskeyword" name="keyword">
                        </div>
                    </div>




                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Kategori</label>
                        <div class="col-sm-10">
                            <select id="newscategory" name="newscategory" class="form-control select2">
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option id="newscategory" value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>



                </div><!-- modal-body -->
                <div class="modal-footer">
                    <button type="submit" id="updatenews" class="btn btn-indigo">Kaydet</button>
                    <a asp-action="Index" asp-controller="News" class="btn btn-outline-light">Kapat</a>
                </div>
            </div>
        </div>
    </div>
</form>













