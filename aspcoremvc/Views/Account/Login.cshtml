<body class="az-body">

    <div class="az-signin-wrapper">
        <div class="az-card-signin">
            <h1 class="az-logo">sd<span>f</span>m</h1>
            <div class="az-signin-header">
                <h2>Hoşgeldin!</h2>
                <h5>Devam etmek için lütfen giriş yap</h5>

                <form asp-action="Login" asp-controller="Account" method="post">
                    <div asp-validation-summary="All" class="text-danger"> </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" placeholder="Mail adresinizi giriniz!" >
                    </div><!-- form-group -->
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" placeholder="Şifre giriniz!" asp-for="Password">
                    </div><!-- form-group -->
                    <button type="submit" class="btn btn-az-primary btn-block">Giriş Yap</button>
                </form>
            </div><!-- az-signin-header -->
            <div class="az-signin-footer">
                @*<p><a href="">Forgot password?</a></p>
                <p>Don't have an account? <a href="page-signup.html">Create an Account</a></p>*@
            </div><!-- az-signin-footer -->
        </div><!-- az-card-signin -->
    </div><!-- az-signin-wrapper -->

    <script src="~/Template/v1.1/lib/jquery/jquery.min.js"></script>
    <script src="~/Template/v1.1/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Template/v1.1/lib/ionicons/ionicons.js"></script>

    <script src="~/Template/v1.1/lib/js/azia.js"></script>
    <script>
        $(function () {
            'use strict'

        });
    </script>
</body>
</html>
